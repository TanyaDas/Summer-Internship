<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Developer Name : Tanya Das-->
    <style name="DeveloperName">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name = "android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- App TagLine : Share your Memories-->
    <style name="AppTagline">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cabin_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name = "android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- SignIn, SignUp-->
    <style name="Headings">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name = "android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--- For TextInputLayout !-->
    <style name="TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!--- For TextInputEditText !-->
    <style name="TextInputEditText">
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!--- For Button (Sign In, Sign Up) !-->
    <style name="Custom_Button">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--- For Common Text Views( Dont have an account/Already have an account!-->
    <style name="CommonTextView">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--- For Caption/Hastag Text Views -->
    <style name="CaptionHastag">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--- For Full Name of User -->
    <style name="FullNameOfUser">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--- For Numbers Displaying -->
    <style name="Numbers">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>