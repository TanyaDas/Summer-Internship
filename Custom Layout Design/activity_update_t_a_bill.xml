<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Work.UpdateTABill">

        <TextView
            android:id="@+id/title_WriteTABill"
            style="@style/TitleUpdateWrite"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Update TA Bill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:autofillHints="@string/app_name"
            android:gravity="center_horizontal"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/title_WriteTABill"
            app:layout_constraintTop_toBottomOf="@+id/title_WriteTABill" />

        <TextView
            android:id="@+id/textView2"
            style="@style/PromptTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="01/06/2021"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="@+id/title_WriteTABill"
            app:layout_constraintStart_toEndOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="@+id/spinner" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/textView3"
            style="@style/PromptTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="09:00"
            app:layout_constraintBottom_toBottomOf="@+id/spinner2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/spinner2"
            app:layout_constraintTop_toTopOf="@+id/spinner2" />

        <TextView
            android:id="@+id/textView4"
            style="@style/PromptTextViews"
            android:layout_marginTop="16dp"
            android:text="From Office"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/spinner2"
            app:layout_constraintTop_toBottomOf="@+id/spinner2" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/spinner3"
            app:layout_constraintTop_toBottomOf="@+id/spinner3" />

        <TextView
            android:id="@+id/textView5"
            style="@style/PromptTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="10:00"
            app:layout_constraintBottom_toBottomOf="@+id/spinner4"
            app:layout_constraintEnd_toEndOf="@+id/spinner3"
            app:layout_constraintStart_toEndOf="@+id/spinner4"
            app:layout_constraintTop_toTopOf="@+id/spinner4" />

        <TextView
            android:id="@+id/textView6"
            style="@style/PromptTextViews"
            android:layout_marginTop="16dp"
            android:text="To Office"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/spinner4"
            app:layout_constraintTop_toBottomOf="@+id/spinner4" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            style="@style/PromptTextViews"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Mode Of Travel"
            app:layout_constraintEnd_toStartOf="@+id/spinner6"
            app:layout_constraintStart_toStartOf="@+id/spinner5"
            app:layout_constraintTop_toBottomOf="@+id/spinner5" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/spinner5"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            style="@style/ShortPromptTextViews"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Distance"
            app:layout_constraintBottom_toBottomOf="@+id/distanceEditText"
            app:layout_constraintEnd_toStartOf="@+id/distanceEditText"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/distanceEditText" />

        <EditText
            android:id="@+id/distanceEditText"
            style="@style/Custom_EditTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_textview_bg"
            android:ems="10"
            android:hint="---Distance in KMs---"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/spinner6"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/spinner6" />

        <TextView
            android:id="@+id/textView9"
            style="@style/ShortPromptTextViews"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="RMA"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber" />

        <EditText
            android:id="@+id/editTextNumber"
            style="@style/Custom_EditTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_textview_bg"
            android:ems="10"
            android:hint="---Write RMA---"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/distanceEditText"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/distanceEditText" />

        <TextView
            android:id="@+id/textView10"
            style="@style/ShortPromptTextViews"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Fair Paid"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber2"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber2"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber2" />

        <EditText
            android:id="@+id/editTextNumber2"
            style="@style/Custom_EditTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_textview_bg"
            android:ems="10"
            android:hint="---Write Fair Paid---"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/editTextNumber"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

        <TextView
            android:id="@+id/textView11"
            style="@style/ShortPromptTextViews"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="DA"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumber3"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber3"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/editTextNumber3" />

        <EditText
            android:id="@+id/editTextNumber3"
            style="@style/Custom_EditTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_textview_bg"
            android:ems="10"
            android:hint="---Write DA---"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/editTextNumber2"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

        <TextView
            android:id="@+id/textView12"
            style="@style/ShortPromptTextViews"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Remarks"
            app:layout_constraintBottom_toBottomOf="@+id/multiAutoCompleteTextView"
            app:layout_constraintEnd_toStartOf="@+id/multiAutoCompleteTextView"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/multiAutoCompleteTextView" />

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView"
            style="@style/Custom_EditTextViews"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_textview_bg"
            android:ems="10"
            android:hint="---Surprise Visit---"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/editTextNumber3"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

        <TextView
            android:id="@+id/textView13"
            style="@style/Custom_Button_Save_Update"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_textview_bg"
            android:text="Update"
            app:layout_constraintEnd_toEndOf="@+id/multiAutoCompleteTextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/multiAutoCompleteTextView" />


        <TextView
            android:id="@+id/textView16"
            style="@style/Custom_Button_Back"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_textview_bg"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/multiAutoCompleteTextView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>